<div class="container pt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="text-center">
        All Reviews
      </h1>
    </div>
  </div>
</div>

<h3 class="lead text-center pt-4">Want to leave feedback? Add a review! üòä</h3>
<!-- Button trigger modal -->
<% if @current_user == nil %>
  <h3 class="lead text-center">Please sign in to leave a review! üëç</h3>
<% else %>
  <div class="d-flex justify-content-center">
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#reviewModal">
      Add a new review
    </button>
  </div>
<% end %>

<!-- Modal -->
<div class="modal fade" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="reviewModalLabel">Add a new review</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/insert_review" method="post">
        <div class="modal-body">
          <div class="mb-3">
            <label for="title_box" class="form-label">Title</label>
            <input type="text" id="title_box" name="query_title" class="form-control">
          </div>

          <div class="mb-3">
            <label for="body_box" class="form-label">Write your review</label>
            <textarea id="body_box" name="query_body" rows="3" class="form-control"></textarea>
          </div>

          <div class="mb-3">
            <label for="rating_box" class="form-label">Rating:</label>
            <div class="rating">
              <input type="radio" id="star1" name="query_rating" value="1">
              <label for="star1" title="1 star"><i class="fas fa-star"></i><br>
                1</label>
              <input type="radio" id="star2" name="query_rating" value="2">
              <label for="star2" title="2 stars"><i class="fas fa-star"></i><br>
                2</label>
              <input type="radio" id="star3" name="query_rating" value="3">
              <label for="star3" title="3 stars"><i class="fas fa-star"></i><br>
                3</label>
              <input type="radio" id="star4" name="query_rating" value="4">
              <label for="star4" title="4 stars"><i class="fas fa-star"></i><br>
                4</label>
              <input type="radio" id="star5" name="query_rating" value="5">
              <label for="star5" title="5 stars"><i class="fas fa-star"></i><br>
                5</label>
            </div>
          </div>

          <div class="mb-3">
            <label for="massage_box" class="form-label">Massage Type<i>(optional)</i></label>
            <select type="integer" id="massage_box" name="query_massage" class="form-control">
              <option value="">Select a massage type</option>
              <% @massages.each do |massage| %>
                <option value="<%= massage.id %>"><%= massage.name %></option>
              <% end %>
            </select>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Create review</button>
        </div>
      </form>
    </div>
  </div>
</div>

<hr>
<% if @current_user == nil %>

<% else %>
  <% if @current_user.reviews.any? %>
    <h1 class="px-3">Your Reviews</h1>

    <div class="accordion mt-3" id="accordionExample">
      <% @list_of_reviews.where(user_id: @current_user.id).each_with_index do |a_review, index| %>
        <div class="accordion-item">
          <h2 class="accordion-header" id="heading<%= index %>">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="false" aria-controls="collapse<%= index %>">
              <strong><%= a_review.title %></strong> (Rating: <%= a_review.rating %>)
            </button>
          </h2>
          <div id="collapse<%= index %>" class="accordion-collapse collapse" aria-labelledby="heading<%= index %>" data-bs-parent="#accordionExample">
            <div class="accordion-body">
              <ul>
                <li>Massage Type: <%= a_review.massage.name if a_review.massage.present? %></li>
                <li>Body: <%= a_review.body %></li>
                <li>Created at: <%= time_ago_in_words(a_review.created_at) %> ago</li>
                <li><a href="/reviews/<%= a_review.id %>">Show details</a></li>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  <% else %>
    <p class="px-3">You currently have no reviews! ü•≤</p>
  <% end %>
<% end %>

<h2 class="px-3 pt-5">Reviews (<%= @list_of_reviews.count%>)</h2>
<div class="card mb-3">
  <div class="card-body">
    <% @list_of_reviews.each do |a_review| %>
      <div class="card mb-3">
        <div class="card-header bg-dark text-white text">
          <% if a_review.user.first_name && a_review.user.last_name == nil %>
            Deleted user
          <% else %>
            <%= a_review.user.first_name %> <%= a_review.user.last_name %>
          <% end %>
          <span class="ms-3 text-black badge bg-warning"><%= a_review.rating %> Stars</span>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= a_review.title %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%= a_review.massage.name if a_review.massage.present? %></h6>
          <p class="card-text"><%= a_review.body %></p>
          <p class="card-text"><small class="text-muted"><%= time_ago_in_words(a_review.created_at) %> ago</small></p>
          <% if @current_user.present? %>
            <% if a_review.user_id == @current_user.id || @current_user.admin == true %>
              <a href="/reviews/<%= a_review.id %>" class="card-link">Show details</a>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
