<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1>Review #<%= @the_review.id %> details</h1>
      <h4>By <%= @the_review.user.first_name %> <%= @the_review.user.last_name %></h4>
      <div class="mb-3">
        <button class="btn btn-primary" onclick="location.href='/reviews'">Go back</button>
      </div>
      <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9"><%= @the_review.title %></dd>
        <dt class="col-sm-3">Body</dt>
        <dd class="col-sm-9"><%= @the_review.body %></dd>
        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9"><%= @the_review.rating %></dd>
        <dt class="col-sm-3">Created at</dt>
        <dd class="col-sm-9"><%= time_ago_in_words(@the_review.created_at) %> ago</dd>
        <dt class="col-sm-3">Updated at</dt>
        <dd class="col-sm-9"><%= time_ago_in_words(@the_review.updated_at) %> ago</dd>
      </dl>
    </div>
  </div>

  <hr>

  <div class="row">
    <div class="col-12">
      <h2>Edit review</h2>
      <form action="/modify_review/<%= @the_review.id %>" method="post" class="mb-3">
        <div class="mb-3">
          <label for="title_box" class="form-label">Title</label>
          <input type="text" id="title_box" name="query_title" class="form-control" value="<%= @the_review.title %>">
        </div>
        <div class="mb-3">
          <label for="body_box" class="form-label">Body</label>
          <textarea id="body_box" name="query_body" class="form-control" rows="3"><%= @the_review.body %></textarea>
        </div>
        <div class="mb-3">
          <label for="rating_box" class="form-label">Rating</label>
          <select id="rating_box" name="query_rating" class="form-select">
            <option value="1" <%= 'selected' if @the_review.rating == 1 %>>1</option>
            <option value="2" <%= 'selected' if @the_review.rating == 2 %>>2</option>
            <option value="3" <%= 'selected' if @the_review.rating == 3 %>>3</option>
            <option value="4" <%= 'selected' if @the_review.rating == 4 %>>4</option>
            <option value="5" <%= 'selected' if @the_review.rating == 5 %>>5</option>
          </select>
        </div>
        <button type="submit" class="btn btn-primary">Update review</button>
      </form>
    </div>
  </div>

<hr class="my-4">

<div class="d-flex flex-column align-items-center justify-content-center">
  <h2 class="mb-3">Or delete the review</h2>
  <p class="mb-4 text-danger"><i>This action cannot be undone!</i></p>
  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteReviewModal">Delete review</button>
</div>

<!-- Delete review modal -->
<div class="modal fade" id="deleteReviewModal" tabindex="-1" aria-labelledby="deleteReviewModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteReviewModalLabel">Confirm Review Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this review?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/delete_review/<%= @the_review.id %>" class="btn btn-danger">Delete review</a>
      </div>
    </div>
  </div>
</div>

<hr class="my-4">
</div>
