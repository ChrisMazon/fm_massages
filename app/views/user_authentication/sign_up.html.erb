<div class="container my-5">
  <h1 class="display-4 text-center">Sign up</h1>
  <p class="lead text-center">Join the hundreds who have sought pain relief with massage therapy!</p>

  <form class="mt-5" action="/insert_user" method="post">
    <div class="row mb-3">
      <div class="col-md-6">
        <label for="first_name_box" class="form-label">First name</label>
        <input type="text" class="form-control" id="first_name_box" name="query_first_name" placeholder="Enter your first name..." required>
      </div>
      <div class="col-md-6">
        <label for="last_name_box" class="form-label">Last name</label>
        <input type="text" class="form-control" id="last_name_box" name="query_last_name" placeholder="Enter your last name..." required>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label for="age_box" class="form-label">Age</label>
        <input type="number" class="form-control" id="age_box" name="query_age" placeholder="Enter your age..." required>
      </div>
      <div class="col-md-6">
        <label for="phone_number_box" class="form-label">Phone number</label>
        <input type="tel" class="form-control" id="phone_number_box" name="query_phone_number" placeholder="Enter a valid phone number..." required>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label for="email_box" class="form-label">Email</label>
        <input type="email" class="form-control" id="email_box" name="query_email" placeholder="Enter a valid email..." required>
      </div>
      <div class="col-md-6">
        <label for="password_box" class="form-label">Password</label>
        <input type="password" class="form-control" id="password_box" name="query_password" placeholder="Choose a password..." required>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-6">
        <label for="password_confirmation_box" class="form-label">Password Confirmation</label>
        <input type="password" class="form-control" id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." required>
      </div>
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-primary">Sign up</button>
    </div>
  </form>

  <hr>

  <p class="text-center">
    Already have an account? <a href="/user_sign_in">Sign in</a> instead.
  </p>
</div>


