<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-8">
      <div class="card">
        <div class="card-header">
          <h5>Edit User Account</h5>
        </div>
        <div class="card-body">
          <form action="/modify_user/<%=@the_user.id%>" method="post">
            <% if @the_user %>
            <div class="mb-3">
              <label for="first_name_box" class="form-label">First name</label>
              <input type="text" id="first_name_box" name="query_first_name" value="<%= @the_user.first_name %>" class="form-control">
            </div>
            <div class="mb-3">
              <label for="last_name_box" class="form-label">Last name</label>
              <input type="text" id="last_name_box" name="query_last_name" value="<%= @the_user.last_name %>" class="form-control">
            </div>
            <div class="mb-3">
              <label for="email_box" class="form-label">Email</label>
              <input id="email_box" name="query_email" value="<%= @the_user.email %>" class="form-control">
            </div>
            <div class="mb-3">
              <label for="age_box" class="form-label">Age</label>
              <input id="age_box" name="query_age" value="<%= @the_user.age %>" class="form-control">
            </div>
            <div class="mb-3">
              <label for="phone_number_box" class="form-label">Phone number</label>
              <input id="phone_number_box" name="query_phone_number" value="<%= @the_user.phone_number %>" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Update account</button>
            <% else %>
            <p>User not found</p>
            <% end %>
          </form>
        </div>
      </div>
      <div class="my-4">
        <h5>Delete Account</h5>
        <p><i>This action cannot be undone!</i></p>
        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">Delete Client's Account</button>
      </div>
    </div>
  </div>
</div>

<!-- Delete account modal -->
<div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteAccountModalLabel">Confirm Account Deletion</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Are you sure you want to delete this user's account?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <a href="/cancel_user_account/<%=@the_user.id%>" class="btn btn-danger">Delete</a>
      </div>
    </div>
  </div>
</div>

