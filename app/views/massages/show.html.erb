<div>
  <div>
    <h1>
      Massage #<%= @the_massage.id %> details
    </h1>

    <div>
      <div>
        <a href="/massages">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_massage/<%= @the_massage.id %>">
          Delete massage
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_massage.name %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @the_massage.description %>
      </dd>

      <dt>
        Duration
      </dt>
      <dd>
        <%= @the_massage.duration %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @the_massage.price %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_massage.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_massage.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit massage
    </h2>

    <form action="/modify_massage/<%= @the_massage.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_massage.name %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description"><%= @the_massage.description %></textarea>
      </div>

      <div>
        <label for="duration_box">
          Duration
        </label>

        <input type="text" id="duration_box" name="query_duration" value="<%= @the_massage.duration %>">
      </div>

      <div>
        <label for="price_box">
          Price
        </label>

        <input type="text" id="price_box" name="query_price" value="<%= @the_massage.price %>">
      </div>

      <button>
        Update massage
      </button>
    </form>
  </div>
</div>

<hr>
